<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="m-5">
    <%= search_form_for @q, class: "flex justify-center gap-4" do |f| %>
      <%= f.search_field :title_cont, class: "rounded-md border-grey-200 w-80" %>
      <%= f.submit(class: "rounded-lg py-3 px-5 bg-green-600 text-white block font-medium")%>
    <% end %>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Books</h1>
    <%= link_to "New book", new_book_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="books" class="min-w-full">
    <%= render @books %>
  </div>
</div>
